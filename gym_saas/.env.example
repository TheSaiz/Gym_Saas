# ==================================
# CONFIGURACIÃ“N DEL SISTEMA
# ==================================

# Entorno (development / production)
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/gym_saas

# Base de datos
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gimnasio_saas
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Seguridad
SESSION_LIFETIME=1800
SESSION_NAME=GYM_SAAS_SESSION
CSRF_TOKEN_NAME=csrf_token

# Timezone
APP_TIMEZONE=America/Argentina/Buenos_Aires

# Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password
MAIL_FROM_ADDRESS=noreply@gimnasio.com
MAIL_FROM_NAME="Gimnasio System"

# MercadoPago
MP_PUBLIC_KEY=
MP_ACCESS_TOKEN=
MP_WEBHOOK_SECRET=

# Uploads
UPLOAD_MAX_SIZE=2097152
UPLOAD_ALLOWED_IMAGES=jpg,jpeg,png,gif,ico

# Logs
LOG_ENABLED=true
LOG_PATH=/logs/
LOG_LEVEL=error

# Rate Limiting
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
